@model ZapateriaJossielito.Models.Compras
@{
    ViewBag.Title = "DeleteCompra";
}

<h2>DeleteCompra</h2>
<div class="form-horizontal">

    <hr />

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.IdCompra)

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <div class="p-3 mb-2 bg-danger text-white">Estas seguro que deseas eliminar el registro?</div>
                <br />
                <input type="submit" value="Aceptar" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "ViewCompra", new { @class = "btn btn - secondary" })




            </div>

        </div>


    }
</div>
