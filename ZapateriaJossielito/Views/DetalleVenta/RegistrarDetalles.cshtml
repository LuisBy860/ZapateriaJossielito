@model ZapateriaJossielito.Models.DetallesVentas
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Registrar</title>
</head>
<body>

    <div class="form-horizontal">
        <h2>REGISTRAR DETALLE VENTA</h2>

        @using (Html.BeginForm("RegistrarDetalles", "DetalleVenta", FormMethod.Post))

        {
            <div class="caja" style="margin-left:100px">
                <form>
                    <label><b>Cantidad</b></label>
                    <div class="form-group">

                        @Html.TextBoxFor(a => a.Cantidad)
                    </div>
                    <label><b>Producto</b></label>
                    <div class="form-group">

                        @Html.TextBoxFor(a => a.IdProducto_FK)
                    </div>
                    <label><b>Venta</b></label>
                    <div class="form-group">

                        @Html.TextBoxFor(a => a.IdVenta_FK)
                    </div>



                    <div>
                        &nbsp;
                    </div>
                    <div class="boton" style="margin-left:105px">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>

            @Html.ActionLink("Back to List", "ViewDetallesVentas")
        }



    </div>
</body>
</html>
