@model List<ZapateriaJossielito.Models.DetallesCompras>

@{
    ViewBag.Title = "ViewDetalleCompra";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css%22%3E">
<h2>Ventas</h2>

<div>

    <hr />
    <table class="table table-dark">
        <tr>

            <th scope="col">IdDetalleCompra</th>

            <th scope="col">Cantidad</th>

            <th scope="col">IdProducto_FK</th>

            <th scope="col">IdCompra_FK</th>

        </tr>


        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDetalleCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto_FK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCompra_FK)
            </td>

            <
            <td>
                @Html.ActionLink("Editar", "Actualizar", new { id = item.IdDetalleCompra }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.IdDetalleCompra }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Eliminar", "ServicioDelete", new { id = item.IdDetalleCompra }, new { @class = "btn btn-danger" })
            </td>
        </tr>
        }



</div>

<p>

    @Html.ActionLink("Agregar DetalleCompra", "Registrar", null, new { @class = "btn btn-success" })
</p>
<p>

    @Html.ActionLink("Ver DetallesCompras", "ViewRegistrar", "DetalleCompra", null, new { @class = "btn btn-warning" })
</p>