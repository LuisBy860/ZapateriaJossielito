@model List<ZapateriaJossielito.Models.Productos>

@{
    ViewBag.Title = "ViewProductos";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css%22%3E">
<h2>Productos</h2>

<div>

    <hr />
    <table class="table table-dark">
        <tr>

            <th scope="col">IdProductos</th>

            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Precio</th>
            <th scope="col">Talla</th>
            <th scope="col">Color</th>
            <th scope="col">Existencias</th>
            <th scope="col">Estilo</th>
        </tr>


        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdProducto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Talla)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Existencias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdEstilo_FK)
        </td>

        <td>
            @Html.ActionLink("Editar", "Actualizar", new { id = item.IdProducto }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.IdProducto }) |
            @Html.ActionLink("Eliminar", "ServicioDelete", new { id = item.IdProducto })
        </td>
    </tr>
        }



</div>

<p>
    @Html.ActionLink("Opción de eliminar", "ServicioDelete", null, new { @class = "btn btn-danger" })
</p>

<p>
    @Html.ActionLink("Agregar Productos", "Registrar", null, new { @class = "btn btn-success" })
</p>

<p>  
    @Html.ActionLink("Ver Estilos", "ViewEstilo", "Estilo", null, new { @class = "btn btn-info" })
</p>