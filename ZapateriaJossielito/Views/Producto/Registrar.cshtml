@model ZapateriaJossielito.Models.Productos
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Registrar</title>
</head>
<body>

    <div class="form-horizontal">
        <h2>Registrar</h2>

        @using (Html.BeginForm("Registrar", "Producto", FormMethod.Post))

        {
         <div class="caja" style="margin-left:100px">
    <form>
        <label><b>Nombre</b></label>
        <div class="form-group">

            @Html.TextBoxFor(a => a.Nombre)
        </div>
        <label><b>Descripcion</b></label>
        <div class="form-group">

            @Html.TextBoxFor(a => a.Descripcion)
        </div>
        <label><b>Precio</b></label>
        <div class="form-group">

            @Html.TextBoxFor(a => a.Precio)
        </div>
        <label><b>Talla</b></label>
        <div class="form-group">

            @Html.TextBoxFor(a => a.Talla)
        </div>
        <label><b>Color</b></label>
        <div class="form-group">

            @Html.TextBoxFor(a => a.Color)
        </div>
        <label><b>Existencias</b></label>
        <div class="form-group">

            @Html.TextBoxFor(a => a.Existencias)
        </div>
        <label><b>ID Estilo</b></label>
        <div class="form-group">

            @Html.TextBoxFor(a => a.IdEstilo_FK)
        </div>
        <div>
            &nbsp;
        </div>
        <div class="boton" style="margin-left:105px">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
</form>
</div>

        @Html.ActionLink("Back to List", "ViewProductos")
    }



        </div>
    </body>
</html>
